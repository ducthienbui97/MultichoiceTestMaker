
<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.User.name %></td>
        <td><%= test.title %></td>
        <td><%= test.length %></td>
        <td><%=	link_to 'Take the test',new_test_submission_path(test) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
